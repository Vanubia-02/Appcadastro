<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Login">


    <ImageView
        android:id="@+id/fundo_login"
        android:layout_width="411dp"
        android:layout_height="737dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.241"
        app:srcCompat="@drawable/fundo" />


    <ImageView
        android:id="@+id/imgcarteira_login"
        android:layout_width="217dp"
        android:layout_height="176dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/carteiratrabalho" />

    <EditText
        android:id="@+id/email_login"
        style="@style/style_edit_values"
        android:layout_marginBottom="24dp"
        android:hint="email"
        app:layout_constraintBottom_toTopOf="@+id/password_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/password_confirm_login"
        style="@style/style_edit_values"
        android:layout_marginBottom="216dp"
        android:hint="Confirme a senha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/password_login"
        style="@style/style_edit_values"
        android:layout_marginBottom="32dp"
        android:hint="senha"
        app:layout_constraintBottom_toTopOf="@+id/password_confirm_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnlogin"
        style="@style/stayle_buttons"
        android:layout_width="155dp"
        android:layout_height="54dp"
        android:backgroundTint="#FFFFFF"
        android:text="Logar"
        android:textColor="#050A2E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_cadastro_login"
        app:layout_constraintHorizontal_bias="0.612"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.917" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_cadastro_login"
        style="@style/stayle_buttons"
        android:layout_width="171dp"
        android:layout_height="61dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="56dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/borde_button" />

    <TextView
        android:id="@+id/text_button_cadastro"
        android:layout_width="103dp"
        android:layout_height="30dp"
        android:text="Cadastro"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_cadastro_login"
        app:layout_constraintEnd_toEndOf="@+id/btn_cadastro_login"
        app:layout_constraintStart_toStartOf="@+id/btn_cadastro_login"
        app:layout_constraintTop_toTopOf="@+id/btn_cadastro_login" />

    <TextView
        android:id="@+id/texLoginTela"
        android:layout_width="228dp"
        android:layout_height="28dp"
        android:layout_marginTop="200dp"
        android:text="FaÃ§a login na sua conta"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>